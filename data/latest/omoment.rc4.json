    "author": null,
    "author_email": "Tomas Protivinsky <tomas.protivinsky@gmail.com>",
    "bugtrack_url": null,
    "classifiers": [
      "Development Status :: 3 - Alpha",
      "License :: OSI Approved :: MIT License",
